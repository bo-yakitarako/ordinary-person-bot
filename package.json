{
  "name": "ordinary-person-bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build-weekly": "tsup --entry.weekly src/weekly.ts --format cjs --outDir dist --external discord.js --external dotenv --external node-html-parser --minify --no-clean",
    "build-saimaru": "tsup --entry.saimaru src/saimaru.ts --format cjs --outDir dist --external discord.js --external dotenv --external node-html-parser --minify --no-clean",
    "build": "pnpm build-weekly && pnpm build-saimaru",
    "debug": "serve debug -p 3000",
    "weekly": "ts-node src/weekly.ts",
    "saimaru": "ts-node src/saimaru.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "serve": "^14.2.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "~5.7.2"
  },
  "dependencies": {
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "node-html-parser": "^7.0.1"
  }
}
